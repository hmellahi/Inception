
server {
        listen 80 default_server;
        listen [::]:80 default_server;
        root /var/www/wordpress;

        index.php

        server_name hmellahi.42.fr;

        location / {
                try_files $uri $uri/ =404;
        }

        location ~ \.php$ {
                fastcgi_split_path_info ^(.+\.php)(/.+)$;
                fastcgi_pass wordpress:9000;
                fastcgi_index index.php;        
        }
}